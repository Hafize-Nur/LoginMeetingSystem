@model LoginMeetingSystem.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-sm">
                <div class="card-body text-center position-relative">


                    <div class="profile-image-wrapper mb-3">
                        <img src="~/Images/resim.jpg" class="rounded-circle border border-white shadow"
                            alt="Profile Image" style="width:130px; height:130px; object-fit:cover; position:absolute; top:0px; left:7%; transform:translateX(-50%); position: relative;
  " />

                    </div>

                    <div class="mt-5">
                        <h3 class="fw-bold">@Model.FirstName @Model.LastName</h3>
                        <p class="text-muted">@Model.Email</p>

                        <ul class="list-group list-group-flush text-start mx-auto" style="max-width: 300px;">
                            <li class="list-group-item"><strong>Telefon:</strong> @Model.Phone</li>
                        </ul>

                        <div class="mt-4 d-flex justify-content-center gap-3 flex-wrap">
                            <a asp-controller="Meeting" asp-action="Index" class="btn btn-primary px-4">
                                Toplantılar
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary px-4">
                                Çıkış Yap
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card-body {
        padding-top: 90px;
    }
</style>
