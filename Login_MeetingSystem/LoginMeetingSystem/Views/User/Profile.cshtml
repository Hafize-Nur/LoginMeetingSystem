@model LoginMeetingSystem.Models.User

@{
    ViewData["Title"] = "Hesabım";
}

<h2>Hoşgeldiniz, @Model.FirstName @Model.LastName</h2>

<p>Email: @Model.Email</p>
<p>Telefon: @Model.Phone</p>

<a asp-controller="Meeting" asp-action="Index" class="btn btn-primary">
    Toplantı İşlemleri
</a>

<a asp-controller="User" asp-action="Logout" class="btn btn-secondary">
    Çıkış Yap
</a>
